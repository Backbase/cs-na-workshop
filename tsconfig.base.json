{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@backbase/marketing/journey": ["libs/marketing/journey/src/index.ts"],
      "@backbase/marketing/space": ["libs/marketing/space/src/index.ts"],
      "@backbase/marketing/ui": ["libs/marketing/ui/src/index.ts"],
      "@backbase/retail/data-access-mocks": ["libs/retail/data-access-mocks/src/index.ts"],
      "@backbase/retail/feature/communication": ["libs/retail/feature/communication/src/index.ts"],
      "@backbase/retail/feature/layout": ["libs/retail/feature/layout/src/index.ts"],
      "@backbase/retail/util/promotions": ["libs/retail/util/promotions/src/index.ts"],
      "@backbase/shared/feature/auth": ["libs/shared/feature/auth/src/index.ts"],
      "@backbase/shared/feature/routable-modal": ["libs/shared/feature/routable-modal/src/index.ts"],
      "@backbase/shared/feature/user-context": ["libs/shared/feature/user-context/src/index.ts"],
      "@backbase/shared/util/app-core": ["libs/shared/util/app-core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
